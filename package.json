{
  "name": "vscode-svg-preview",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimonSiefke/vscode-svg-preview.git"
  },
  "scripts": {
    "dev": "rollup --config --no-esModule --no-strict --watch --environment NODE_ENV:development",
    "build": "rollup --config --no-esModule --no-strict --environment NODE_ENV:production",
    "lint": "eslint . && prettier **/*.* --list-different",
    "lint:fix": "eslint --fix . && prettier --write **/*.*",
    "test": "jest --collect-coverage",
    "test:watch": "jest --watch",
    "bundlesize": "bundlesize",
    "postinstall": "lerna bootstrap",
    "package": "npm run lint && npm run test && npm run build && npm run bundlesize && node ./scripts/package.js"
  },
  "keywords": [],
  "author": "Simon Siefke",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "autoprefixer": "^9.5.1",
    "bundlesize": "^0.17.1",
    "eslint": "^5.16.0",
    "eslint-config-bitworkers": "^1.21.8",
    "fs-extra": "^7.0.1",
    "jest": "^24.7.1",
    "lerna": "^3.13.2",
    "prettier": "^1.16.4",
    "prettier-config-bitworkers": "^1.5.0",
    "rollup": "^1.9.3",
    "rollup-plugin-import-alias": "^1.0.6",
    "rollup-plugin-node-resolve": "^4.2.2",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.20.1",
    "semantic-release": "^15.13.3",
    "semantic-release-config-bitworkers": "^1.3.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.2"
  },
  "bundlesize": [
    {
      "path": "./packages/extension/dist/extension.js",
      "maxSize": "6 kB",
      "compression": "none"
    },
    {
      "path": "./packages/preview/dist/index.js",
      "maxSize": "1 kB"
    }
  ]
}
