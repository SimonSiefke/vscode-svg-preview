{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension (dev)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/packages/extension",
        "--disable-extensions"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "npm: dev"
    },
    {
      "name": "Extension (dev & liveshare)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/packages/extension"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "npm: dev"
    },
    {
      "name": "Extension (dev & liveshare 2)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/packages/extension"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Extension (prod)",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/packages/extension"
      ],
      "outFiles": ["${workspaceRoot}/dist/**/*.js"],
      "preLaunchTask": "npm: build"
    }
  ]
}
